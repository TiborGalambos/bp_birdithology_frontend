<!--            app:layout_constraintEnd_toStartOf="@id/guideline8"-->
<!--            android:padding="0dp"-->
<!--            android:layout_margin="0dp"-->
<!--            tools:ignore="MissingConstraints"/>-->


    </LinearLayout>
</androidx.cardview.widget.CardView>